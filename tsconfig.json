// abyss_db\tsconfig.json

{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "prisma",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": { "abyssdb/*": ["prisma/*"] },
    "composite": true
  },
  "include": ["prisma"],
  "exclude": ["node_modules", "dist", "prisma/generated"]
}
